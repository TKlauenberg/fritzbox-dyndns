{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "es2022",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "incremental": true
  },
  "include": ["src/**/*.ts"]
}
